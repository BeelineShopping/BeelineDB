<!DOCTYPE html>
<html>
<head>
  <title>BeelineDB</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "BeelineDB", root_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
      	<% if current_page?(stores_path) %>
      	  <li class="active"><%= link_to "Stores", stores_path %></li>
      	<% else %>
          <li><%= link_to "Stores", stores_path %></li>
        <% end %>
        <% if current_page?(shopping_lists_path) %>
          <li class="active"><%= link_to "Lists", shopping_lists_path %></li>
        <% else %>
          <li><%= link_to "Lists", shopping_lists_path %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav pull-right">
        <% if app_user_signed_in? %>
          <p class="navbar-text">Welcome, <strong><%= current_app_user.first_name %></strong> | <%= link_to 'Sign Out', destroy_app_user_session_path, method: :delete %></p>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div>
</nav>
<div class="container">
  <%= render partial: "shared/flash_messages", flash: flash %> 
  <%= yield %>
</div>
</body>
</html>
