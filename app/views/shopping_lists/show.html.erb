<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @list.list_title %></h3>
  </div>
  <div class="panel-body">
  <center><h3>Items in List</h3></center>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @list.list_items.each do |item| %>
          <tr>
            <td><%= Item.find(item.item_id).title %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<%= button_to 'Add Item', new_shopping_list_list_item_path(@list),:class => "btn btn-primary", :method => :get %>
<%= link_to 'Back', shopping_lists_path %>


