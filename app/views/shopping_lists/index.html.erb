<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Shopping Lists</h3>
  </div>
  <div class="panel-body">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of Items</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.list_title %></td>
        <td><%= list.num_items_in_list %></td>
        <td><%= link_to 'Show', list %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
  </div>


<br>

<%= button_to 'New List', new_shopping_list_path, class: "btn btn-primary", method: :get %>